{
  "name": "esa-climate-from-space",
  "version": "2.1.0",
  "description": "Climate from Space application for ESAs CCI+ program.",
  "main": "dist-src-electron/main.js",
  "type": "module",
  "scripts": {
    "start": "vite --port 8080",
    "clean": "rm -rf ./dist",
    "build": "npm run clean && tsc && vite build && npm run copy:assets",
    "copy:assets": "cp assets/images/favicon.ico dist/ && cp assets/images/share.png dist/",
    "test": "npm run eslint && npm run license-check",
    "eslint": "eslint ./src/scripts",
    "format:js": "prettier 'src/scripts/**/*.{ts,tsx}'",
    "prettier": "prettier ./src/scripts/**/*.{ts,tsx} --write",
    "license-check": "license-checker --excludePackages 'symbol@0.2.3' --summary --onlyAllow='MIT;BSD-2-Clause;BSD-3-Clause;ISC;Apache-2.0;CC-BY-4.0;AFLv2.1;BSD;MPL-2.0;CC0-1.0;CC-BY-3.0;WTFPL;Unlicense;GPL-3.0;Python-2.0'",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "preversion": "npm run test",
    "version": "npm run changelog && git checkout -b chore/release-${npm_package_version} && git add .",
    "postversion": "git push -u origin chore/release-${npm_package_version} && git push --tags --no-verify",
    "electron:compile": "tsc --project tsconfig-electron.json && cp src/electron/preload.cjs dist-src-electron/",
    "electron:start": "npm run electron:compile && electron .",
    "electron:install": "electron-builder install-app-deps",
    "electron:clean": "rm -rf ./dist-electron && rm -rf ./dist-src-electron",
    "electron:prepare-build": "npm run electron:clean && npm run electron:install && npm run clean && vite build && npm run copy:assets && npm run electron:compile",
    "electron:build": "electron-builder -mwl --config electron-builder.json --publish never",
    "electron:download-basemaps": "gsutil -m rsync -drc gs://esa-cfs-tiles/${npm_package_version}/basemaps ./storage/basemaps",
    "electron:copy-basemaps": "cp -r ./storage/basemaps ./dist",
    "story-packages": "./scripts/create-story-packages.sh",
    "clean:story-packages": "find ./storage -type f -name \"*.zip\" -delete",
    "download-stories": "gsutil -m rsync -x \".*stories-.*\\.json$\" -r gs://esa-cfs-storage/$npm_package_version/stories ./storage/stories/ && npm run clean:story-packages",
    "upload-stories": "./scripts/confirm-storage-upload.sh && npm run story-packages && find ./storage/stories -type f -name \".DS_Store\" -delete && gsutil -m cp -r ./storage/stories/* gs://esa-cfs-storage/$npm_package_version/stories/ && npm run clean:story-packages",
    "upload-layers": "find ./storage/layers -type f -name \".DS_Store\" -delete && gsutil -m cp -r ./storage/layers/* gs://esa-cfs-storage/$npm_package_version/layers",
    "upload-index": "node ./scripts/create-search-index.js && find ./storage/index -type f -name \".DS_Store\" -delete && bash -c 'shopt -s nullglob; for f in ./storage/index/*.json; do gzip -c \"$f\" > \"$f.gz\"; name=$(basename \"$f\"); gsutil -h \"Content-Type: application/json\" -h \"Content-Encoding: gzip\" cp \"$f.gz\" \"gs://esa-cfs-storage/$npm_package_version/index/$name\"; rm \"$f.gz\"; done'",
    "download-layers": "gsutil -m cp gs://esa-cfs-storage/$npm_package_version/layers/layers-*.json ./storage/layers/",
    "optimize-story-images": "./scripts/optimize-story-images.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ubilabs/esa-climate-from-space.git"
  },
  "author": "Ubilabs GmbH",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ubilabs/esa-climate-from-space/issues"
  },
  "homepage": "https://github.com/ubilabs/esa-climate-from-space#readme",
  "dependencies": {
    "@datapunt/matomo-tracker-react": "^0.5.1",
    "@reduxjs/toolkit": "^2.5.1",
    "@ubilabs/esa-webgl-globe": "^1.3.3",
    "@use-gesture/react": "^10.3.1",
    "classnames": "^2.5.1",
    "cross-zip": "^4.0.0",
    "electron-is-dev": "^2.0.0",
    "fuse.js": "^7.1.0",
    "lenis": "^1.3.9",
    "lethargy": "^1.0.9",
    "lodash.debounce": "^4.0.8",
    "lodash.intersection": "^4.4.0",
    "motion": "^12.23.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-intl": "^7.1.5",
    "react-markdown": "^8.0.3",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.5.2",
    "react-youtube": "^7.13.1",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^3.1.0",
    "rehype-raw": "^6.1.1",
    "remove-markdown": "^0.6.2",
    "video.js": "^7.17.0"
  },
  "devDependencies": {
    "@csstools/postcss-global-data": "^3.0.0",
    "@types/classnames": "^2.3.4",
    "@types/git-state": "^4.1.3",
    "@types/lodash.debounce": "^4.0.9",
    "@types/lodash.intersection": "^4.4.9",
    "@types/node": "^22.13.1",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/react-redux": "^7.1.34",
    "@types/redux-logger": "^3.0.13",
    "@types/redux-thunk": "^2.1.0",
    "@types/video.js": "^7.3.58",
    "@types/youtube-player": "^5.5.11",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "conventional-changelog-cli": "^5.0.0",
    "cssnano": "^7.0.6",
    "electron": "^34.5.8",
    "electron-builder": "^23.6.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "git-state": "^4.1.0",
    "globals": "^15.14.0",
    "imagemin-cli": "^8.0.0",
    "license-checker": "^25.0.1",
    "postcss": "^8.5.3",
    "postcss-custom-media": "^11.0.5",
    "prettier": "3.4.2",
    "rollup": "^4.22.4",
    "svg-loaders-react": "^3.1.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0",
    "vite": "^6.4.1"
  }
}
