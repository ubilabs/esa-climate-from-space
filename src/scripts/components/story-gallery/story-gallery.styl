.lightbox
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  z-index: 2
  display: flex
  justify-content: center
  align-items: center
  width: 100%
  height: 100%
  background-color: rgba(0, 0, 0, 0.95)

.fullscreen
  position: absolute
  top: 0
  right: 500px
  bottom: 0
  left: 0

.storyGallery
  position: relative
  flex-shrink: 0
  overflow: hidden
  width: 100%
  height: 100%

.lightboxGallery
  width: 90%
  height: 90%

.buttonContainer
  position: absolute
  top: 50%
  z-index: 1
  display: flex
  justify-content: space-between
  width: 100%
  transform: translateY(-50%)

  > *
    fill: #fff

.fullscreenIcon
  position: absolute
  right: 0
  bottom: 0
  z-index: 1
  padding: 5px
  fill: #fff

.slider
  display: flex
  height: 100%

.transition
  transition: transform ease-out 0.5s

.sliderImage
  height: 100%
  object-fit: cover
