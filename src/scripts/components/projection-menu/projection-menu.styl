.projectionContainer
  position: relative
  margin: 20px

.projectionButton
  outline: 0
  background-color: #ccc
  font-size: 1em

.projectionList
  position: absolute
  right: 0
  bottom: 20px
  padding: 0
  min-width: 200px
  background-color: #fff
  list-style: none

.projectionListItem
  margin: 7px
  padding: 10px 15px

.projectionListItem:hover, .projectionListItem:focus
  background-color: #e0f1ff
