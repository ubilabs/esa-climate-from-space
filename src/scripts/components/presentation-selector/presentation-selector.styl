@require '../../../variables.styl'

.presentationSelector
  position: relative
  width: 100%
  height: 100%
  background-color: $black
  pointer-events: auto

.header
  display: flex
  justify-content: space-between
  padding: 10px
  background-color: $darkGrey1

.title
  flex-grow: 1
  padding-right: 115px
  color: $textWhite
  text-align: center
  text-transform: uppercase
  font-size: 2em

.backButton
  margin: 10px 0 10px 0
  padding: 10px
  color: $textWhite
  font-size: 2em
