.menuContainer
    position: relative

.menuButton
    position: absolute
    bottom: 40px
    left: 40px
    border-radius: 50%
    background-color: #ccc
    font-size: 1em
    outline: 0

.menuList
    position: absolute
    bottom: 60px;
    left: 40px;
    min-width: 250px
    background-color: #fff;
    padding: 0

.menuListItem
    padding: 10px 15px
    margin: 7px

.menuListItem:hover,
.menuListItem:focus
    background-color: #e0f1ff