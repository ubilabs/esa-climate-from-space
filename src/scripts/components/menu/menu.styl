@require '../../../variables.styl'

.menuContainer
  display: flex
  flex-direction: column
  align-items: center
  height: 90%
  font-family: Arial, Helvetica, sans-serif

.logo
  position: absolute
  bottom: emCalc(20px)

  svg
    fill: $main

.menuList, .subMenuList
  display: flex
  padding: 0
  color: $textWhite
  list-style: none

.menuItemTitle
  font-weight: bold
  pointer-events: none

.menuList
  flex-wrap: wrap
  overflow-y: auto
  margin: 0
  padding: 0

.subMenuList
  flex-direction: column
  padding: emCalc(20px) 0

.menuListItem
  padding: emCalc(30px)
  color: $textDefault

.subMenuListItem
  padding: emCalc(5px) emCalc(30px)
  cursor: pointer

.menuButton
  color: $textDefault
