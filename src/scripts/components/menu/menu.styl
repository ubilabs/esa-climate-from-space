@require '../../../variables.styl'

.menuContainer
  padding: 10px

.menuButton
  border: none
  background: none
  color: $textWhite
  font-size: 1em
  cursor: pointer

.menuList
  position: absolute
  top: 0
  right: 0
  margin: 0
  padding: 0
  padding-top: 15%
  min-width: 250px
  width: 100%
  height: 100%
  border-radius: 5px
  background: $black
  list-style: none
  opacity: 0.9

.menuListItem
  display: flex
  flex-flow: wrap
  justify-content: center
  align-items: center
  margin: 7px
  padding: 10px 15px
  color: $textWhite
  cursor: pointer

  svg
    padding-right: 15px
    fill: $textWhite

  a
    display: flex
    flex-flow: wrap
    align-items: center
    color: $textWhite
    text-decoration: none

    &:hover, &:focus
      color: $main

  &:hover, &:focus
    color: $main
