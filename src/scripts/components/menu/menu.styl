@require '../../../variables.styl'

.menuContainer
  padding: 10px
  text-align-last: center
  font-family: Arial, Helvetica, sans-serif

.logo
  padding-top: emCalc(20px)

  svg
    fill: $main

.menuList
  padding: 0
  width: 100%
  height: 100%
  list-style: none

.menuListItem
  display: flex
  flex-flow: wrap
  justify-content: center
  align-items: center
  margin: 7px
  padding: 10px 15px
  color: $textWhite
  cursor: pointer
