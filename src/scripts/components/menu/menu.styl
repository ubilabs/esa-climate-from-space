.menuContainer
    position: absolute
    left: 40px
    bottom: 40px

.menuButton
    position: absolute
    bottom: 0
    left: 0
    border-radius: 50%
    background-color: #ccc
    font-size: 1em
    outline: 0

.menuList
    position: absolute
    bottom: 20px;
    left: 0;
    min-width: 250px
    background-color: #fff;
    padding: 0

.menuListItem
    padding: 10px 15px
    margin: 7px

.menuListItem:hover,
.menuListItem:focus
    background-color: #e0f1ff
