.menuContainer
  position: relative
  align-self: left
  margin: 20px

.menuButton
  border-radius: 50%
  background-color: #ccc
  font-size: 1em
  outline: 0

.menuList
  position: absolute
  bottom: 20px
  left: 0
  min-width: 250px
  background-color: #fff;
  padding: 0
  list-style: none

.menuListItem
  padding: 10px 15px
  margin: 7px

.menuListItem:hover,
.menuListItem:focus
  background-color: #e0f1ff
