:global(html), :global(body), :global(#app)
  margin: 0
  height: 100%

.app
  height: 100%
  font-family: Arial, Helvetica, sans-serif

.layout
  position: absolute
  z-index: 2
  display: flex
  flex-direction: row
  width: 100%
  height: 100%
  pointer-events: none

  & > *
    pointer-events: auto

.story
  display: flex
  flex-direction: row
  width: 100%
  height: 100%

.nav
  z-index: 1
  display: flex
  flex-direction: row
  justify-content: flex-start
  align-items: flex-end
  width: 100%
  height: 100%
  pointer-events: none

  & > *
    pointer-events: auto

.timeslider
  flex-grow: 1
