@require '../../../variables.styl'

:global(html), :global(body), :global(#app)
  margin: 0
  height: 100%

.app
  position: relative
  width: 100%
  height: 100%
  background-color: $black
  font-family: Arial, Helvetica, sans-serif

.nav
  position: absolute
  top: 0
  right: 0
  z-index: 1
  display: flex
  padding-top: emCalc(10px)
  padding-right: emCalc(14px)

.zoom
  position: absolute
  right: 0
  bottom: 0
  display: flex
  padding-right: emCalc(14px)
  padding-bottom: emCalc(10px)
