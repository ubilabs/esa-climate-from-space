@require '../../../variables.styl'

$range-height = 5px

thumb()
  width: 16px
  height: 16px
  border-radius: 50%
  background: $main
  box-shadow: 0px 1px 5px rgba(0, 0, 0, 0.2), 0px 3px 4px rgba(0, 0, 0, 0.12), 0px 2px 4px rgba(0, 0, 0, 0.14)
  cursor: pointer

compareThumb()
  width: 10px
  height: 25px
  border-radius: 4px
  box-shadow: 0px 1px 5px rgba(0, 0, 0, 0.2), 0px 3px 4px rgba(0, 0, 0, 0.12), 0px 2px 4px rgba(0, 0, 0, 0.14)

.timeSlider
  position: absolute
  bottom: emCalc(65px)
  display: flex
  justify-content: center
  width: 100%
  font-size: 16px

.container
  min-width: 400px
  width: 30%

.label
  display: flex
  justify-content: space-between
  align-items: flex-end
  color: white
  font-size: emCalc(18px)

.labelMin, .labelMax
  font-size: emCalc(10px)

.ranges
  position: relative
  width: 100%
  height: $range-height * 2

  input
    position: relative
    z-index: 2
    outline: 0

.mainTrack, .compareTrack
  position: absolute
  top: $range-height
  width: 100%
  height: $range-height
  border-radius: emCalc(2px)
  background: $darkGrey4

.compareTrack
  top: $range-height * 3

.rangeMain, .rangeCompare
  position: absolute
  top: 0
  z-index: 1
  display: inline-flex
  height: $range-height
  border-radius: emCalc(2px)
  background: $main

.input, .compareInput
  margin: 0
  width: 100%
  background: transparent
  -webkit-appearance: none

.compareInput
  top: $range-height

.input::-webkit-slider-thumb
  thumb()

  margin-top: 0
  -webkit-appearance: none

.input::-moz-range-thumb
  thumb()

  border: 1px solid $main

.input::-ms-thumb
  thumb()

.compareInput::-webkit-slider-thumb
  margin-top: -5px

  compareThumb()

.compareInput::-moz-range-thumb
  compareThumb()

.compareInput::-ms-thumb
  compareThumb()

.ticks
  position: relative
  width: 5px
  height: 5px
  border-radius: 50%
  background-color: red
