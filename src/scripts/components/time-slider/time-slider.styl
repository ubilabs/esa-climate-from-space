@require '../../../variables.styl'

$range-height = 5px

boxShadow()
  box-shadow: 0px 1px 5px rgba(0, 0, 0, 0.2), 0px 3px 4px rgba(0, 0, 0, 0.12), 0px 2px 4px rgba(0, 0, 0, 0.14)

thumb()
  boxShadow()

  width: 16px
  height: 16px
  border-radius: 50%
  background: $main
  cursor: pointer

compareThumb()
  width: 10px
  height: 25px
  border-radius: emCalc(4px)

  boxShadow()

.timeSlider
  position: absolute
  bottom: emCalc(65px)
  display: flex
  justify-content: center
  width: 100%
  font-size: emCalc(16px)

.container
  min-width: 400px
  width: 30%

.label
  display: flex
  color: white
  font-size: emCalc(18px)

.ranges
  position: relative
  width: 100%
  height: $range-height * 2

  input
    position: relative
    z-index: 2
    outline: 0

.mainTrack, .compareTrack
  position: absolute
  top: $range-height
  width: 100%
  height: $range-height
  border-radius: emCalc(2px)
  background: $darkGrey4

.compareTrack
  top: $range-height

.compareBothTracks
  top: $range-height * 3

.rangeMain, .rangeCompare
  position: absolute
  top: 0
  z-index: 1
  display: flex
  overflow-x: hidden
  height: $range-height
  border-radius: emCalc(2px)
  background: $main

.input, .compareInput
  margin: 0
  width: 100%
  background: transparent
  -webkit-appearance: none

.compareInput
  top: $range-height

.input::-webkit-slider-thumb
  thumb()

  margin-top: 0
  -webkit-appearance: none

.input::-moz-range-thumb
  thumb()

  border: 1px solid $main

.input::-ms-thumb
  thumb()

.compareInput::-webkit-slider-thumb
  margin-top: -5px

  compareThumb()

.compareInput::-moz-range-thumb
  compareThumb()

.compareInput::-ms-thumb
  compareThumb()

.ticks
  position: absolute
  width: emCalc(5px)
  height: emCalc(5px)
  border-radius: 50%
  background-color: rgba($darkGrey4, 0.5)
  transform: translateX(-50%)

.timeOutput
  position: absolute
  bottom: 15px
  color: $textWhite
  transform: translateX(-50%)
