@require '../../../../variables.styl'

.globeNavigation
  position: absolute
  right: emCalc(22px)
  bottom: emCalc(22px)
  display: flex
  gap: emCalc(15px)

.globeNavigation > *
  z-index: 1

.projection
  text-shadow: 0px 0px 2px $black

  &:hover
    text-shadow: none

.compass
  width: 24px
  height: 24px

.compass svg
  transition: all 0.5s ease-out
  transform: rotate(var(--globe-latitude))

  &:hover
    fill: $main

.downloadIcon svg
  stroke: rgba(16, 22, 26, 0.3)
  fill: $textWhite

  &:hover
    stroke: none

.locateMe
  width: 22px
  height: 22px
