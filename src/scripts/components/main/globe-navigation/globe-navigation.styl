@require '../../../../variables.styl'

.globeNavigation
  position: absolute
  right: emCalc(22px)
  bottom: emCalc(22px)
  z-index: 1
  display: flex

.projection
  text-shadow: 0px 0px 2px $black

  &:hover
    text-shadow: none

.compass
  margin: 0 emCalc(15px)
  width: 24px
  height: 24px
  transition: all 0.5s ease-out
  transform: rotate(var(--globe-latitude))

.compass svg
  &:hover
    fill: $main

.downloadIcon svg
  stroke: rgba(16, 22, 26, 0.3)
  fill: $textWhite

  &:hover
    stroke: none
