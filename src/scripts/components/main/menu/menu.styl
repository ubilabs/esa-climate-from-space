@require '../../../../variables.styl'

.menuContainer
  display: flex
  flex-direction: row
  flex-wrap: wrap
  justify-content: center
  align-items: flex-start
  overflow-y: auto
  width: 60%
  height: 90%
  font-family: Arial, Helvetica, sans-serif

.menuList
  display: flex
  flex-direction: column
  flex-wrap: wrap
  margin: 0
  padding: emCalc(10px) emCalc(32px)
  min-width: emCalc(200px)
  width: 25%
  color: $textWhite
  list-style: none

.menuItemTitle,
.subMenuTitle
  display: flex
  align-items: center
  padding: emCalc(10px) 0
  pointer-events: none

  svg
    padding-right: emCalc(10px)
    fill: $textWhite

.subMenuTitle
  padding-top: 30px

.menuListItem
  padding: emCalc(10px) 0 emCalc(10px) emCalc(35px)
  color: $textDefault

.menuButton
  display: flex
  align-items: center
  color: $textDefault

  &:hover
    color: $textColor

    svg
      fill: $main

  svg
    padding-right: emCalc(10px)
    fill: $textDefault

.version
  align-self: center
  color: #939597
  font-size: 10px

.credits
  position: absolute
  bottom: 0
  display: flex
  justify-content: space-between
  margin: 0 emCalc(22px)
  width: 100%
  color: $textDefault

  svg
    height: emCalc(25px)
    fill: $textWhite

    &:hover
      fill: $textColor

.cciLogo
  display: flex
  flex-direction: column
  justify-content: center

  svg
    fill: $main

.logo
  padding: emCalc(10px) emCalc(22px)

  img
    width: emCalc(80px)

.creditsText
  margin: emCalc(5px)
  margin-left: 0
  padding-left: emCalc(8px, 13)
  font-size: 13px

@media screen and (max-width: 480px)
  .menuContainer
    width: 100%

  .menuList:first-child
    display: none

  .cciLogo
    justify-content: space-evenly
    width: emCalc(80px)

  .credits
    display: flex

  :global(path.hideText)
    display: none
