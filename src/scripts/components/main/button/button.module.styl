@require '../../../../variables.styl'

.button
  display: flex
  align-items: center
  padding: 0
  outline: 0
  border: none
  background: none
  color: $textWhite
  text-decoration: none
  font-size: 1rem
  cursor: pointer
  fill: $textWhite
  gap: emCalc(7px)

  svg
    fill: $textWhite

  &:hover
    color: $main

    svg
      fill: $main

.disabled
  color: $textDefault
  pointer-events: none

  svg
    fill: $textDefault

@media screen and (max-width: 768px)
  .hideLabel
    span
      display: none
