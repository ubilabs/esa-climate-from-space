@require '../../../../variables.styl'

.tracking
  position: absolute
  bottom: emCalc(20px)
  left: 50%
  z-index: 1
  display: flex
  flex-direction: row
  justify-content: space-between
  padding: emCalc(16px)
  width: 85%
  border-radius: 4px
  background-color: $darkGrey4
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.14), 0px 3px 4px rgba(0, 0, 0, 0.12), 0px 1px 5px rgba(0, 0, 0, 0.2)
  transform: translateX(-50%)

.message
  margin: 0
  color: $textWhite
  white-space: pre-line
  font-size: emCalc(16px)

.buttons
  display: flex
  margin-left: emCalc(20px)

.trackingYes, .trackingNo
  color: $textColor
  text-align: left
  text-transform: uppercase
  font-size: emCalc(11px)
  font-family: NotesEsaBold

.trackingNo
  margin-right: emCalc(30px)
  color: $textDefault
  white-space: nowrap
