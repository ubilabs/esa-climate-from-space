@require '../../../../variables.styl'

.navigation
//   position: absolute
//   top: emCalc(22px)
//   right: emCalc(22px)
  border-bottom: 2px solid #00B398;
  background: #003349;
  display: flex
  align-items: center
  flex-wrap: no-wrap
  justify-content: space-between
  gap: emCalc(30px)
  z-index: 1
  grid-area: header
  padding: 0 emCalc(10px)

.logoLink
  height: 1.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 1rem;


.storiesContainer
  display: flex
  gap: emCalc(8px)

.tagsContainer
  position: relative
  display: flex

.button
  text-shadow: 0px 0px 2px $black
  font-size: emCalc(18px)
  font-family: NotesEsa
  line-height: emCalc(22px)

  &:hover
    text-shadow: none

  svg
    filter: drop-shadow(3px 2px 2px rgba(16, 22, 26, 0.2))

.badge
  position: relative
  top: emCalc(2px)
  left: emCalc(-4px)
  width: emCalc(8px)
  height: emCalc(8px)
  border-radius: 50%
  background: $main
  color: $textWhite

@media screen and (max-width: 768px)
  .navigation
    gap: emCalc(15px)
