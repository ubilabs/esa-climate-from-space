@require '../../../../variables.styl'

.settings
  display: grid
  column-gap: emCalc(8px)
  grid-template-columns: repeat(2, 1fr)
  grid-template-rows: repeat(3, 1fr)
  row-gap: emCalc(24px)

.title
  font-weight: 700
  font-style: normal
  font-size: emCalc(16px)
  font-family: Arial
  line-height: emCalc(22px)

.languageSelect
  display: flex
  flex-direction: column
  grid-area: 3 / 1 / 4 / 3
  gap: emCalc(8px)

  label
    color: $textWhite

  select
    padding: 0 emCalc(16px)
    width: 100%
    height: 44px
    border-radius: 4px
    background: $black

.languageSelect > *
  color: $textDefault

@media screen and (max-width: 850px)
  .settings
    grid-column-start: 1
