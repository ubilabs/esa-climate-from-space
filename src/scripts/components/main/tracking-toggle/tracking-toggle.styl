@require '../../../../variables.styl'

input[type='checkbox']
  cursor: pointer
  -webkit-appearance: none
  -moz-appearance: none
  appearance: none
  -webkit-tap-highlight-color: transparent

  &:focus
    outline: 0

.trackingToggle
  position: relative
  display: inline-block
  margin: 0
  width: 52px
  height: 32px
  border: 2px solid $darkGrey4
  border-radius: 16px
  background: linear-gradient(180deg, $darkGrey2 0%, $darkGrey1 100%)
  transition: all 0.2s ease

  &:after
    position: absolute
    top: 2px
    left: 2px
    width: 24px
    height: 24px
    border-radius: 50%
    background: white
    box-shadow: 0 1px 2px rgba(44, 44, 44, 0.2)
    content: ''
    transition: all 0.2s cubic-bezier(0.5, 0.1, 0.75, 1.35)

  &:checked
    border-color: $main

    &:after
      transform: translatex(20px)
