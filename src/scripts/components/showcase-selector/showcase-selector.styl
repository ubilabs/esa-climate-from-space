.showcaseSelector
  position: relative
  width: 100%
  height: 100%
  background-color: #10161a
  pointer-events: auto

.header
  display: flex
  justify-content: space-between
  align-items: center
  padding: 10px
  background-color: #182026

.title
  display: flex
  flex: 1
  justify-content: center
  align-items: center
  color: #fff
  text-align: center
  text-transform: uppercase
  font-size: 1.1em

.backButton
  display: flex
  flex: 1
  justify-content: flex-start
  align-items: center
  color: #fff
  font-size: 1.1em

.playButton
  display: flex
  flex: 1
  justify-content: flex-end
  align-items: center
  padding-right: 20px
  color: #939597

  svg
    padding-left: 10px
    fill: #fff
