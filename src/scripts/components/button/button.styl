@require '../../../variables.styl'

.button
  display: flex
  align-items: center
  padding: 0
  outline: 0
  border: none
  background: none
  color: $textWhite
  text-decoration: none
  font-size: 1rem
  cursor: pointer
  fill: $textWhite

  svg
    fill: $textWhite

  svg + .label
    padding-left: emCalc(7px)

  &:hover, &:focus
    color: $main

    svg
      fill: $main
