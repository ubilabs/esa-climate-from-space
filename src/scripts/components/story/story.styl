.story
  display: flex
  flex-direction: column
  width: 50%
  height: 100%

.sidepanel
  position: relative
  height: 100%
  background-color: #fff
  pointer-events: auto

.previewImage
  width: 100%
  height: 25%
  background-color: #ccc
  object-fit: cover

.content
  padding: 10px

.backButton
  position: absolute
  left: 0
  display: block
  padding: 20px 0 0 20px
  color: #fff
  pointer-events: auto

.pagination
  display: flex
  flex-flow: row
  justify-content: space-between
  align-items: center
  width: 25%

.emptyIcon
  width: 34px
  height: 34px
