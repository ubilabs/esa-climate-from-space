@require '../../../variables.styl'

.story
  display: flex
  flex-shrink: 0
  flex-direction: column
  width: $storyWidth
  height: 100%

.presentStory
  .storyTitle
    font-size: 2em

  .backButton
    font-size: 1.3em

.header
  position: absolute
  right: $storyWidth
  left: 0
  z-index: 1
  display: flex
  flex-direction: row
  justify-content: space-between

.backButton
  display: block
  padding: 20px 0 0 20px
  color: #fff

.storyTitle
  padding-right: 20px
  color: #fff
