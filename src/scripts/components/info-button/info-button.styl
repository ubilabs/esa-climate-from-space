.infoButton
  display: flex
  flex-direction: column
  align-items: center

.icon
  z-index: 1
  padding: 2px
  outline: 0
  border: none
  border-radius: 50%
  background-color: transparent
  font-size: 1em
  line-height: 50%
  cursor: pointer

  svg
    fill: #fff

.modal
  padding: 5px
  width: 200px
  border-radius: 5px
  background-color: #fff
  cursor: pointer
