.layerList
  // flex-grow: 1
  overflow: scroll
  margin: 0
  padding: 0
  height: calc(100vh - 80px)
  background-color: #182026
  list-style: none

.layerItem
  padding: 15px
  color: #939597
  font-size: 1.125em
  cursor: pointer

.layerItem:hover, .layerItem:focus
  background: #30404D
  color: #00AE9D

.layerItemSelected, .layerItemSelected:hover, .layerItemSelected:focus
  background: #30404D
  color: #00AE9D

.subLayerItem
  margin: 5px
  padding: 15px

.subLayerItemSelected
  background: #30404D
  color: #00AE9D
