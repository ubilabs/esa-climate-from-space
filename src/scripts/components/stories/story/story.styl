@require '../../../../variables.styl'

.story
  display: flex
  flex-direction: column
  height: 100%

.main
  position: relative
  display: flex
  flex-direction: row
  overflow: hidden
  height: 100%

  > *
    flex-grow: 1
    width: 50%

.rightSideComponent
  height: 100%

.globeContainer
  position: relative
  display: flex
  flex-direction: column
  height: 100%
  background-color: $plainBlack

.layerDetails
  position: absolute
  right: 0
  bottom: 0
  left: 0
  display: flex
  flex-direction: column
  justify-content: flex-end
  padding: inherit
  background: linear-gradient(180deg, rgba(0, 0, 0, 0.1) 0%, rgba(0, 0, 0, 0.4) 100%)

.storySlider
  position: unset
  padding: emCalc(40px) 0 emCalc(30px)
  background: none

  > div
    min-width: 25%
    width: 80%

@media screen and (max-width: 480px)
  .main
    display: flex
    flex-direction: column
    overflow-y: auto

    > :last-child
      height: 300px

    > *
      padding: 25px
      width: inherit
