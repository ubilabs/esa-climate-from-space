@require '../../../../variables.styl'

.selectedTags
  position: absolute
  top: emCalc(40px)
  left: emCalc(-18%)
  z-index: 1
  display: flex
  flex-direction: column
  padding: emCalc(13px)
  width: fit-content
  height: fit-content
  border-radius: 4px
  background-color: $darkGrey4
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.14), 0px 3px 4px rgba(0, 0, 0, 0.12), 0px 1px 5px rgba(0, 0, 0, 0.2)
  text-transform: uppercase
  letter-spacing: emCalc(0.6px)
  font-family: NotesEsaBold

.selectedTags:before
  position: absolute
  bottom: 100%
  left: emCalc(20px)
  border-top-color: inherit
  border-right: 8px solid transparent
  border-bottom: 10px solid $darkGrey4
  border-left: 8px solid transparent
  content: ''

.tag
  display: flex
  align-items: center
  padding: emCalc(2px) 0
  color: $textWhite
  white-space: nowrap
  font-size: emCalc(12px)

  svg
    padding-right: emCalc(5px)
    fill: $textWhite

.resetFilters
  padding: emCalc(12px) 0 0
  outline: none
  border: none
  background: transparent
  color: $textColor
  text-align: right
  text-transform: uppercase
  text-wrap: nowrap
  font-size: emCalc(12px)
  font-family: NotesEsaBold
  cursor: pointer
  user-select: none
