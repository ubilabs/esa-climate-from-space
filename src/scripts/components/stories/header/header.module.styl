@require '../../../../variables.styl'

.header
  position: relative
  display: flex
  flex-shrink: 0
  justify-content: space-between
  align-items: center
  padding-left: emCalc(20px)
  height: $headerHeight
  background-color: $darkGrey1
  font-family: NotesEsa

.logo
  width: fit-content

.backButton
  flex-grow: 1
  padding-left: emCalc(20px)
  width: 50%
  color: $textWhite
  font-size: emCalc(18px)

.title
  position: absolute
  left: 50%
  margin-bottom: 0
  color: $textWhite
  text-align: center
  text-transform: uppercase
  white-space: nowrap
  font-size: emCalc(18px)
  transform: translateX(-50%)

.rightContent
  display: flex
  flex-grow: 1
  justify-content: flex-end
  align-items: center
  padding-right: emCalc(25px)
  width: 50%
  color: $textDefault

@media screen and (max-width: 480px)
  .title
    flex-basis: 400px
    overflow: hidden
    text-overflow: ellipsis

  svg
    padding-left: emCalc(15px)

@media screen and (max-width: 480px)
  .logo
    width: emCalc(12px)
