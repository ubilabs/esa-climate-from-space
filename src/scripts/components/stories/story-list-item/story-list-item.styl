@require '../../../../variables.styl'

.storyListItem
  display: flex
  flex-direction: column
  justify-content: flex-end
  width: 100%
  height: 100%
  border-radius: 4px
  background-size: cover

.selected
  position: relative
  border: 2px solid $main

  .imageInfo
    border-bottom-right-radius: 2px
    border-bottom-left-radius: 2px

.storyNumber
  position: absolute
  top: 10px
  right: 10px
  width: 30px
  height: 30px
  border-radius: 50%
  background-color: $main
  color: $textWhite
  text-align: center
  line-height: 30px

.image
  height: 220px
  background: black
  background-position: center
  background-size: cover

.info
  overflow-y: auto
  box-sizing: border-box
  padding: emCalc(16px)
  min-height: 45%
  width: 100%
  height: fit-content
  border-bottom-right-radius: 2px
  border-bottom-left-radius: 2px
  background-color: $darkGrey1

.storyListItem:hover .info
  background-color: lighten($darkGrey1, 5)

.title
  margin: 0
  margin-top: 5px
  color: $main
  font-weight: bold

.description
  color: $textDefault

a
  color: $textDefault
  text-decoration: none

.present
  img
    height: 300px

  .title
    font-size: 2em

  .description
    font-size: 1.5em

.showcase
  .title
    font-size: 1.5em

.downloadButton
  display: flex
  flex-grow: 1
  flex-direction: column
  justify-content: flex-end
  align-self: flex-end
