@require '../../../../variables.styl'

.lightboxStoryGallery
  .slider
    align-items: center
    height: 100%

  .sliderItem
    display: flex
    justify-content: center
    align-items: center
    width: 100%
    height: 100%

  .itemContainer
    display: flex
    flex-direction: column
    justify-content: center
    width: 97%
    height: 97%

  .photo
    flex: 1
    width: 100%
    height: 0

.slider
  display: flex
  height: 100%

.itemContainer
  position: relative
  display: flex
  flex-direction: column
  width: 100%
  height: 100%

.photo
  flex: 1
  width: 100%
  height: 0

.transition
  transition: transform ease-out 0.5s

.sliderItem
  height: 100%

@media screen and (max-width: 480px)
  .lightboxStoryGallery
    .itemContainer
      max-width: 100%
      max-height: 100%
      background-color: $plainBlack

  .lightboxDescription
    pointer-events: none

    > div
      overflow: hidden
      padding: 0
      max-width: 100%
