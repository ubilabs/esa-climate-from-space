@require '../../../../../../variables.styl'

.legend
  color: #ffffff
  padding: emCalc(20px)
  text-align: center
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center

legend
  display: flex
  flex-wrap: wrap
  justify-content: center
  gap: emCalc(8px)

  > *
    position: relative
    margin-left: 36px

  > *:before
    display: inline-block
    content: ''
    width: 19px
    height: 6px
    position: absolute
    left: -24px
    top: 50%
    transform: translateY(-50%)
    background: var(--legend-color)

@media screen and (min-width: 768px)
  .legend
    h1
      font-size: emCalc(42px)
      line-height: 46px
