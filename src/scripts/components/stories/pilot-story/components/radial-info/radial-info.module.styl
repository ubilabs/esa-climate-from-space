@require '../../../../../../variables.styl'

.radialInfoContainer
  height: 100%
  box-sizing: border-box
  color: $textWhite
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  scroll-snap-align: center

.radialInfoContainer > h2
  position: absolute
  top: 0
  text-align: center
  font-size: emCalc(20px)
  font-style: normal
  font-weight: 700
  line-height: 26px

.elements
  position: relative
  width: 270px
  height: 270px
  border: 1px solid #007D8A
  border-radius: 50%
  padding: 6px
  display: flex
  justify-content: center
  align-items: center

.elements:before
  content: ''
  position: absolute
  bottom: 0
  width: inherit
  height: 50%
  border: 1px dashed $deepSpace2
  border-color: transparent transparent $deepSpace2 transparent
  border-radius: 50% / 0 0 80px 80px
  transform: translateY(50%)

.selectedInner, .optionInner
  background-color: $deepSpace
  border-radius: 50%
  height: 100%
  width: 100%
  display: flex
  justify-content: center
  align-items: center
  box-sizing: border-box

.selectedInner
  padding: emCalc(8px)
  text-align: center
  font-size: emCalc(20px)
  font-style: normal
  font-weight: 700
  line-height: 22px
  transition: opacity 0.7s ease-in

.option
  width: 64px
  height: 64px
  padding: emCalc(4px)
  box-sizing: border-box
  border: 1px solid $darkTeal
  border-radius: 50%
  position: absolute
  display: flex
  justify-content: center
  align-items: center
  color: white
  font-weight: bold
  transition: all 0.2s ease-in-out

.optionInner
  background-color: $deepSpace2

.option.selected
  cursor: pointer
  width: 74px
  height: 74px

  .optionInner
    background-color: $darkTeal
