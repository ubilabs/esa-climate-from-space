@require '../../../../../../variables.styl'

.intro
  height: 100vh
  padding: $headerHeight emCalc(29px)
  box-sizing: border-box
  width: 100%
  display: flex
  flex-direction: column
  justify-content: center

.backToStories
  margin-top: emCalc(29px)
  align-self: flex-start

.introContent
  display: flex
  flex-direction: column
  justify-content: center
  align-items: flex-start
  flex: 1

.subTitle
  background: $darkTeal
  color: $textWhite
  font-size: emCalc(12px)
  font-style: normal
  font-weight: 700
  line-height: normal
  letter-spacing: 0.36px
  text-transform: uppercase
  width: fit-content
  padding: 6px
  display: flex
  align-items: flex-start
  gap: 10px

.title
  color: $textWhite
  font-size: 48px
  font-style: normal
  font-weight: 700
  line-height: 50px
  margin: 0
