@require '../../../../../../variables.styl'

.scrollHint
  color: $textWhite
  font-family: NotesEsa
  font-size: 12px
  font-style: normal
  font-weight: 400
  line-height: 18px
  width: 100%
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  gap: 4px

  svg
    fill: $textWhite
    animation: fade-in-up 2s ease infinite

@keyframes fade-in-up
  0%
    opacity: 0
    transform: translateY(20px)

  100%
    opacity: 1
    transform: translateY(0)

@media screen and (min-width: 768px)
  .scrollHint
    position: absolute
    left: 0
    right: 0
    bottom: 80px
