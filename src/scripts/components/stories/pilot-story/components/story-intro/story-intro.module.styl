@require '../../../../../../variables.styl'

.intro
  height: 100vh
  padding: $headerHeight emCalc(29px)
  display: flex
  flex-direction: column
  justify-content: center
  box-sizing: border-box

.backToStories
  margin-top: emCalc(29px)
  align-self: flex-start

.introContent
  display: flex
  flex-direction: column
  justify-content: center
  align-items: flex-start
  gap: emCalc(40px)
  flex: 1

.hidden
  opacity: 0
  transition: opacity 1s ease-out

.storyTitle
  color: $textWhite
  font-family: NotesEsa
  font-size: 48px
  font-style: normal
  font-weight: 700
  line-height: 50px
  width: 100%
  margin-top: emCalc(30px)

.storyDescription
  color: #fff
  font-family: NotesEsa
  font-size: 20px
  font-style: normal
  font-weight: 700
  line-height: 24px

.buttonContainer
  width: 100%
  min-height: emCalc(43px)
  display: flex
  gap: 8px

#whiteButton
  background: $textWhite
  color: $deepSpace
