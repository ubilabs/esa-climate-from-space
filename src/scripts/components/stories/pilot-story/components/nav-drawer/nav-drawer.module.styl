@require '../../../../../../variables.styl'

.content
  box-sizing: border-box
  position: fixed
  z-index: 100
  display: flex
  flex-direction: column
  height: 100%
  width: 100%
  bottom: 0
  color: $textWhite
  font-size: 1rem;
  font-family: NotesEsa

  &:before
    z-index: -1
    content: ''
    background: rgb(0, 51, 73);
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    opacity: 0.45


.content.open&:before
  opacity: 0.95
  transition: opacity 0.5s

.navContainer
  overflow: auto
  padding: 1.5rem
  visibility: visible
  padding: 1.5rem
  height: auto

.title
  display: flex
  position: relative
  justify-content: start
  align-items: center
  padding: 1.5rem 1rem
  text-transform: uppercase
  margin: 0
  gap: 0.5rem

  span
    margin: 0
    display: flex
    align-items: center
    gap: 0.5rem
    justify-content: start

  svg
    min-width: 24px
    min-height: 22px

  >*:last-child
    margin-left: auto

.navLinks
  z-index: 1
  background: none
  color: rgba(0, 179, 152, 1)
  padding-left: 0
  svg
    fill: currentColor


@media screen and (min-width: 768px)
  .content
    border-radius: 24px;
    top: -60px
    width: 500px
    height: fit-content

    &:before
      border-radius: 24px

// We use visilibity hidden instead of display none to keep the transition effect so the --indicator-y-offset can be animated
  .content:not(.open) > div
    visibility: hidden;
    height: 0;
    padding: 0;

  div.content.open:after,
  div.content:not(.open):after
    height: 0