.progressIndication
    --gap: 24px
    --indicator-y-offset: 0
    --circle-radius: 0
    position: relative
    height: fit-content
    display: flex
    flex-direction: column
    gap: var(--gap)

    &[data-is-title-in-view='false']:after
      content: ''
      position: absolute
      right: 50%
      top: var(--indicator-y-offset)
      transform: translate(50%, 50%)
      width: 10px
      height: 10px
      border-radius: 50%
      background-color: white
      transform-origin: center

    &[data-is-title-in-view='false'][data-is-subchapter='true']:after
      border-radius: 0
      width: 8px
      height: 8px

    &[data-is-title-in-view='true'][data-is-subchapter='false'] > span[data-is-selected='true']:before
      content: url("data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewBox='0 0 24 24' fill='none'><circle cx='12' cy='12' r='5.5' fill='white' stroke='white'/><circle cx='12' cy='12' r='8.5' stroke='white'/></svg>")

    &[data-is-title-in-view='true'][data-is-subchapter='true'] > span[data-is-selected='true']:before
      content: url("data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16' preserveAspectRatio='xMidYMid meet' fill='none'><rect x='1' y='1' width='14' height='14' stroke='white'/><rect x='4' y='4' width='8' height='8' fill='white' stroke='white'/></svg>");

    &[data-is-subchapter='false'] > span:before
      content: url("data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewBox='0 0 24 24' fill='none'><circle cx='12' cy='12' r='8.5' stroke='white'/></svg>")

    &[data-is-subchapter='true'] > span:before
      content: url("data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' width='16' height='16' viewBox='0 0 16 16' fill='none'><rect x='0.5' y='15.5' width='14.5' height='14.5' transform='rotate(-90 0.5 15.5)' stroke='white'/></svg>");

    > span
      width: calc(var(--circle-radius) * 2)
      height: calc(var(--circle-radius) * 2)
      position: relative
      cursor: pointer

      &:not(:last-child):after
        position: absolute
        content: ''
        width: 0
        top: 20px
        height:calc(var(--gap) + 8px)
        left: 50%
        transform: translate(-50%)
        border-right: 1px solid white
        position: absolute
        background-color: white

  &[data-is-subchapter='true'] > span
    &:not(:last-child):after
      top: 16px
      height:calc(var(--gap))
     