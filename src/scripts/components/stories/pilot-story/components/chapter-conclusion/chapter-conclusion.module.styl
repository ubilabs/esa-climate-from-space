@require '../../../../../../variables.styl'

.conclusion
  --topPadding: 75px
  height: calc(100svh - var(--topPadding))
  box-sizing: border-box
  overflow-x: hidden
  display: flex
  flex-direction: column
  justify-content: space-between
  padding: emCalc(20px) emCalc(29px) emCalc(100px)
  background: linear-gradient(180deg, rgba(0, 32, 46, 0.8) 8.28%, rgba(2, 30, 42, 0) 100%)
  scroll-snap-align: center

.conclusion
  button
    position: initial
    margin: 0
    opacity: 0
    transition: opacity 0.2s ease-in

.conclusion.visible
  button
    opacity: 1

.chapterText
  color: $textWhite
  text-align: center
  font-style: normal

  p
    font-size: emCalc(30px)
    font-weight: 700
    line-height: 36px

#substoryButton
  align-self: flex-end
  flex-direction: row-reverse
  padding-right: emCalc(8px)
  padding-left: emCalc(12px)

@media screen and (min-width: 768px)
  .conclusion
    padding: emCalc(20px)

  .chapterText
    display: flex
    justify-content: center

    p
      max-width: 50%
      align-self: center
      font-size: 62px
      line-height: 68px
