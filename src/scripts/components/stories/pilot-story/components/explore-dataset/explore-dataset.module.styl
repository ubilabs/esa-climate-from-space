@require '../../../../../../variables.styl'

.explore
  height: 100vh
  display: flex
  padding: $headerHeight 0
  flex-direction: column
  align-items: center
  justify-content: center
  box-sizing: border-box
  z-index: 1
  scroll-snap-align: center
  color: $textWhite
  text-align: center

.exploreContent
  padding: $headerHeight emCalc(29px)
  display: flex
  height: 100%
  justify-content: space-between
  align-items: center
  flex-direction: column

.buttonContainer
  display: flex
  flex-direction: column
  justify-content: space-between
  height: 7rem
  margin-bottom: -3rem

@media screen and (min-width: 768px)
  .exploreContent
    h1
      font-size: emCalc(40px)

.globeContainer
  position: relative
  width: 100%
  height: 100%

  @media screen and (min-width: 768px)
    width: calc(100% - 10rem)
    height: calc(100% - 5rem)

.backButton
  position: absolute
  top: 0
  left: 0
  z-index: 1
