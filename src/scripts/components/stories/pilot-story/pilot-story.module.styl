@require '../../../../variables.styl'

.pilotStory
  display: flex
  flex-direction: column
  width: 100vw
  font-family: NotesEsa

.chapterContainer
  display: flex
  flex-direction: column
  gap: 1em
  background: linear-gradient(270deg, rgba(0, 32, 46, 0.7) 8.28%, rgba(2, 30, 42, 0) 100%)
  z-index: 1
  justify-content: center
  align-items: center
  height: 100%

.drawer
  display: flex
  justify-content: center

.header
  display: flex
  position: relative
  justify-content: space-between
  align-items: center
  padding-inline: 1.5rem
  min-height: 64px
  margin: 0

