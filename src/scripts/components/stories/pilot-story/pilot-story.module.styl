@require '../../../../variables.styl'

.pilotStory
  width: 100vw
  font-family: NotesEsa
  display: grid
  grid-template-rows: $headerHeight 1fr
  height: 100%
  overflow: hidden

.storyContainerBlock
  height: 100%
  overflow: hidden

.storyContainer
  background: linear-gradient(270deg, rgba(0, 32, 46, 0.7) 8.28%, rgba(2, 30, 42, 0) 100%)
  height: 100%
  overflow: scroll
  scroll-snap-type: y mandatory

.chaptersContainer
  justify-content: center
  align-items: center
  display: flex
  flex-direction: column
  gap: 1em

.drawer
  display: flex
  justify-content: center

.chapterProgressIndication
  position: fixed !important
  z-index: 10
  top: 200px
  left: 36px
  pointer-events: none
  filter: drop-shadow(0px 0px 30px #007D8A)
