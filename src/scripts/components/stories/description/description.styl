@require '../../../../variables.styl'

.description
  position: absolute
  bottom: 0
  box-sizing: border-box
  padding-right: emCalc(55px, 16)
  padding-bottom: emCalc(10px, 16)
  width: 100%
  background: rgba($black, 0.6)

.content
  display: -webkit-box
  overflow: hidden
  box-sizing: border-box
  padding: 0 emCalc(15px, 16)
  max-height: $storyDescriptionHeight
  width: 100%
  color: rgba($textWhite, 0.7)
  font-size: 11px
  -webkit-line-clamp: 3
  -webkit-box-orient: vertical

  > *
    font-size: 11px

.description:hover
  .content
    padding-bottom: 0
    min-height: $storyDescriptionHeight
    max-height: emCalc(300px, 16)
    -webkit-line-clamp: initial
