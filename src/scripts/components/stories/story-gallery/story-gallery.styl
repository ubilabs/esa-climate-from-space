@require '../../../../variables.styl'

.storyGallery
  position: relative
  background-color: $plainBlack

.gallery
  position: relative
  flex-shrink: 0
  overflow: hidden
  height: 100%

.lightboxStoryGallery
  .gallery
    position: fixed
    top: 0
    left: 0
    z-index: 1
    width: 100%
    height: 100%
    background-color: rgba($plainBlack, 0.8)

  .fullscreenExitIcon
    position: absolute
    top: 2%
    right: 2.5%
    z-index: 1
    padding: emCalc(10px)
    filter: drop-shadow(3px 2px 2px rgba(16, 22, 26, 0.4))
    cursor: pointer
    fill: $textWhite

  .fullscreenExitIcon:hover
    fill: $textColor

  .buttonContainer
    .navIcon
      margin: 0 emCalc(50px)

  .progressContainer
    position: fixed
    bottom: $storyCaptionHeight + 8em
    left: 0
    z-index: 2

.buttonContainer
  position: absolute
  top: 50%
  display: flex
  justify-content: space-between
  width: 100%
  height: emCalc(34px)
  transform: translateY(-50%)

  .navIcon
    margin: 0 emCalc(10px)
    border-radius: 50%
    background: $darkGrey4
    cursor: pointer
    fill: #fff

  .navIcon:hover
    background: rgba($darkGrey4, 0.8)

  .disabledNavIcon
    background-color: $darkGrey2
    pointer-events: none

    svg
      fill: rgba(255, 255, 255, 0.24)

.fullscreenIcon
  position: absolute
  right: 0
  bottom: 0
  z-index: 1
  padding: emCalc(10px)
  cursor: pointer
  fill: $textWhite

.fullscreenIcon:hover
  fill: $textColor

.imageInfo
  position: relative
  display: flex
  justify-content: space-between
  align-items: center
  max-height: 130px
  width: 100%
  background-color: $black

.progressContainer
  position: absolute
  bottom: $storyCaptionHeight
  left: 0
  z-index: 1
  width: 100%

.progress
  display: flex
  flex-direction: row
  justify-content: center
  height: emCalc(20px)

.progressItem
  margin: 0 remCalc(5px)
  width: 10px
  height: 10px
  border: 1px solid $textDefault
  border-radius: 50%
  background: rgba($textDefault, 0.31)

.currentProgress
  margin: 0 remCalc(5px)
  width: 10px
  height: 10px
  border-radius: 50%
  background: rgba($textWhite, 0.7)

@media screen and (max-width: 480px)
  .storyMedia
    order: 1
    padding: 0

  .lightboxStoryGallery
    .buttonContainer
      .navIcon
        margin: 0 emCalc(5px)
