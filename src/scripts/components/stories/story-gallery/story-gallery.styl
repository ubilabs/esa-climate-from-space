@require '../../../../variables.styl'

.storyGallery
  padding: emCalc(80px) emCalc(56px)
  background-color: $plainBlack

.gallery
  position: relative
  flex-shrink: 0
  overflow: hidden
  height: 100%

.lightboxGallery
  position: absolute
  top: 0
  left: 0
  z-index: 1
  width: 100%
  height: 100%
  background-color: rgba($black, 0.8)

  .slider
    align-items: center
    height: 100%

  .sliderImage
    display: flex
    justify-content: center
    align-items: center
    width: 100%
    height: 100%

  .imageContainer
    display: flex
    flex-direction: column
    justify-content: flex-end
    max-width: 80%
    max-height: 90%
    background: rgba($darkGrey4, 0.3)

  .fullscreenExitIcon
    padding: emCalc(10px)
    cursor: pointer
    fill: #fff

  .photo
    display: flex
    width: 100%
    height: 90%
    object-fit: contain

  .imageInfo
    display: flex
    justify-content: space-between
    align-items: center
    max-height: 60px
    width: 100%
    height: 100%
    background-color: $black

  .description
    margin: emCalc(15px)
    color: $textDefault
    font-size: emCalc(11px)

  .buttonContainer
    .navIcon
      margin: 0 emCalc(50px)

.buttonContainer
  position: absolute
  top: 50%
  z-index: 1
  display: flex
  justify-content: space-between
  width: 100%
  height: emCalc(34px)
  transform: translateY(-50%)

  .navIcon
    margin: 0 emCalc(10px)
    border-radius: 50%
    background: $darkGrey4
    cursor: pointer
    fill: #fff

  .navIcon:hover
    background: rgba($darkGrey4, 0.8)

.fullscreenIcon
  position: absolute
  right: 0
  bottom: 0
  z-index: 1
  padding: emCalc(10px)
  cursor: pointer
  fill: #fff

.slider
  display: flex
  height: 100%

.transition
  transition: transform ease-out 0.5s

.sliderImage
  height: 100%

.imageContainer
  width: 100%
  height: 100%

.photo
  width: 100%
  height: 100%
  object-fit: contain

@media screen and (max-width: 480px)
  .storyMedia
    order: 1
    padding: 0

  .lightboxGallery
    position: fixed

    .imageContainer
      max-width: 100%
      max-height: 100%
      background-color: $plainBlack

    .imageInfo
      max-height: 100px

    .buttonContainer
      .navIcon
        margin: 0 emCalc(5px)
