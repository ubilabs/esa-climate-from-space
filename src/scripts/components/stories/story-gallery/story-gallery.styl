@require '../../../../variables.styl'

.storyGallery
  position: relative
  background-color: $plainBlack

.gallery
  position: relative
  flex-shrink: 0
  overflow: hidden
  height: 100%

.lightboxGallery
  position: fixed
  top: 0
  left: 0
  z-index: 1
  width: 100%
  height: 100%
  background-color: rgba($plainBlack, 0.8)

  .slider
    align-items: center
    height: 100%

  .sliderImage
    display: flex
    justify-content: center
    align-items: center
    width: 100%
    height: 100%

  .imageContainer
    display: flex
    flex-direction: column
    justify-content: center
    width: 95%
    height: 95%

  .fullscreenExitIcon
    position: absolute
    top: 0
    right: 0
    padding: emCalc(10px)
    cursor: pointer
    fill: #fff

  .photo
    flex: 1
    width: 100%
    height: 0
    object-fit: cover

  .buttonContainer
    .navIcon
      margin: 0 emCalc(50px)

.description.lightboxDescription
  position: inherit
  padding: emCalc(15px)
  height: emCalc(170px, 16)
  background: none

  > div
    overflow-y: auto
    margin: 0 auto
    max-height: 100%
    width: 50%
    height: 100%
    -webkit-line-clamp: initial

.buttonContainer
  position: absolute
  top: 50%
  z-index: 1
  display: flex
  justify-content: space-between
  width: 100%
  height: emCalc(34px)
  transform: translateY(-50%)

  .navIcon
    margin: 0 emCalc(10px)
    border-radius: 50%
    background: $darkGrey4
    cursor: pointer
    fill: #fff

  .navIcon:hover
    background: rgba($darkGrey4, 0.8)

  .disabledNavIcon
    background-color: $darkGrey2
    pointer-events: none

    svg
      fill: rgba(255, 255, 255, 0.24)

.fullscreenIcon
  position: absolute
  right: 0
  bottom: 0
  z-index: 1
  padding: emCalc(10px)
  cursor: pointer
  fill: #fff

.slider
  display: flex
  height: 100%

.transition
  transition: transform ease-out 0.5s

.sliderImage
  height: 100%

.imageContainer
  position: relative
  display: flex
  flex-direction: column
  width: 100%
  height: 100%

.photo
  flex: 1
  width: 100%
  height: 0
  object-fit: cover

.imageInfo
  position: relative
  display: flex
  justify-content: space-between
  align-items: center
  max-height: 130px
  width: 100%
  background-color: $black

.progressContainer
  position: absolute
  bottom: $storyDescriptionHeight
  left: 0
  z-index: 1
  width: 100%

.progress
  display: flex
  flex-direction: row
  justify-content: center
  height: emCalc(20px)

.progressItem
  margin: 0 remCalc(5px)
  width: 10px
  height: 10px
  border: 1px solid rgba(252, 252, 252, 0.22)
  border-radius: 50%
  background: rgba($textWhite, 0.31)

.lightboxProgress
  position: fixed
  bottom: $storyDescriptionHeight + 8em
  left: 0
  z-index: 2

.currentProgress
  margin: 0 remCalc(5px)
  width: 10px
  height: 10px
  border-radius: 50%
  background: rgba($textWhite, 0.7)

@media screen and (max-width: 480px)
  .storyMedia
    order: 1
    padding: 0

  .lightboxGallery
    position: fixed

    .imageContainer
      max-width: 100%
      max-height: 100%
      background-color: $plainBlack

    .buttonContainer
      .navIcon
        margin: 0 emCalc(5px)
