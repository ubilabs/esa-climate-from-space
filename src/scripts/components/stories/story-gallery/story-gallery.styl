@require '../../../../variables.styl'

.storyGallery
  position: relative
  background-color: $plainBlack

.gallery
  position: relative
  flex-shrink: 0
  overflow: hidden
  height: 100%

.lightboxStoryGallery
  .gallery
    position: fixed
    top: 0
    left: 0
    z-index: 1
    width: 100%
    height: 100%
    background-color: rgba($plainBlack, 0.8)

  .slider
    align-items: center
    height: 100%

  .sliderImage
    display: flex
    justify-content: center
    align-items: center
    width: 100%
    height: 100%

  .imageContainer
    display: flex
    flex-direction: column
    justify-content: center
    width: 95%
    height: 95%

  .fullscreenExitIcon
    position: absolute
    top: 2%
    right: 2.5%
    z-index: 1
    padding: emCalc(10px)
    filter: drop-shadow(3px 2px 2px rgba(16, 22, 26, 0.4))
    cursor: pointer
    fill: $textWhite

  .fullscreenExitIcon:hover
    fill: $textColor

  .photo
    flex: 1
    width: 100%
    height: 0
    object-fit: cover

  .buttonContainer
    .navIcon
      margin: 0 emCalc(50px)

  .progressContainer
    position: fixed
    bottom: $storyCaptionHeight + 8em
    left: 0
    z-index: 2

.lightboxDescription
  position: inherit
  overflow: hidden
  padding: emCalc(15px)
  height: emCalc(170px, 16)
  background: none
  pointer-events: none

  > div
    overflow-y: auto
    margin: 0 auto
    max-width: 50%
    max-height: 100%
    width: fit-content
    height: 100%
    -webkit-line-clamp: initial

.buttonContainer
  position: absolute
  top: 50%
  display: flex
  justify-content: space-between
  width: 100%
  height: emCalc(34px)
  transform: translateY(-50%)

  .navIcon
    margin: 0 emCalc(10px)
    border-radius: 50%
    background: $darkGrey4
    cursor: pointer
    fill: #fff

  .navIcon:hover
    background: rgba($darkGrey4, 0.8)

  .disabledNavIcon
    background-color: $darkGrey2
    pointer-events: none

    svg
      fill: rgba(255, 255, 255, 0.24)

.fullscreenIcon
  position: absolute
  right: 0
  bottom: 0
  z-index: 1
  padding: emCalc(10px)
  cursor: pointer
  fill: $textWhite

.fullscreenIcon:hover
  fill: $textColor

.slider
  display: flex
  height: 100%

.transition
  transition: transform ease-out 0.5s

.sliderImage
  height: 100%

.imageContainer
  position: relative
  display: flex
  flex-direction: column
  width: 100%
  height: 100%

.photo
  flex: 1
  width: 100%
  height: 0
  object-fit: cover

.imageInfo
  position: relative
  display: flex
  justify-content: space-between
  align-items: center
  max-height: 130px
  width: 100%
  background-color: $black

.progressContainer
  position: absolute
  bottom: $storyCaptionHeight
  left: 0
  z-index: 1
  width: 100%

.progress
  display: flex
  flex-direction: row
  justify-content: center
  height: emCalc(20px)

.progressItem
  margin: 0 remCalc(5px)
  width: 10px
  height: 10px
  border: 1px solid $textDefault
  border-radius: 50%
  background: rgba($textDefault, 0.31)
  // box-shadow: 2px 2px 5px 0px #ccc

.currentProgress
  margin: 0 remCalc(5px)
  width: 10px
  height: 10px
  border-radius: 50%
  background: rgba($textWhite, 0.7)

@media screen and (max-width: 480px)
  .storyMedia
    order: 1
    padding: 0

  .lightboxStoryGallery
    .gallery
      position: fixed

      .imageContainer
        max-width: 100%
        max-height: 100%
        background-color: $plainBlack

      .buttonContainer
        .navIcon
          margin: 0 emCalc(5px)

  .lightboxDescription
    pointer-events: none

    > div
      overflow: hidden
      padding: 0
      max-width: 100%
