@require '../../../../variables.styl'

.layerDescription
  overflow-y: auto
  margin: remCalc(15px) remCalc(25px)
  max-height: 80px
  color: $textWhite
  text-align: center
  text-shadow: 0px 0px 2px #1d282f
  font-size: emCalc(12px)
  font-family: NotesEsaBold

h1
  margin-top: 0
  font-weight: bold
  font-size: emCalc(23px)
  font-family: NotesEsaBold
  line-height: emCalc(16px)

h2
  margin-top: emCalc(16px)
  font-size: emCalc(18px)
  font-family: NotesEsaBold

h3, h4, h5, h6
  margin-top: emCalc(16px)
  font-family: NotesEsaBold

p
  margin: emCalc(10px) 0

@media screen and (max-width: 480px)
  .layerDescription
    position: absolute
    top: 0
    left: 0
    height: 40px
