.storyItem
  display: flex
  flex-direction: column
  justify-content: flex-end
  margin: 5px
  height: 100%
  height: 300px
  border-radius: 4px
  background: rgba(24, 32, 38, 0.95)

.selected
  position: relative
  background: #ccc

.storyNumber
  position: absolute
  top: 10px
  right: 10px
  width: 30px
  height: 30px
  border: 1px solid #000
  border-radius: 50%
  background-color: #ccc
  color: #fff
  text-align: center
  line-height: 30px

.imageInfo
  padding: 16px
  height: 40%
  background: rgba(24, 32, 38, 0.95)

.title
  margin: 0
  margin-top: 5px
  color: #00AE9D
  font-size: 1.125em

.description
  color: #939597
  font-size: 1.125em

a
  color: #939597
  text-decoration: none

.present
  img
    height: 300px

  .title
    font-size: 2em

  .description
    font-size: 1.5em
