@require '../../../variables.styl'

.storyMedia
  padding: emCalc(80px) emCalc(56px) 0 emCalc(28px)
  height: 100%

.storyGallery
  position: relative
  flex-shrink: 0
  overflow: hidden

.lightboxGallery
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%

  .slider
    max-height: 100%
    height: 100%

.buttonContainer
  position: absolute
  top: 50%
  z-index: 1
  display: flex
  justify-content: space-between
  width: 100%
  height: emCalc(34px)
  transform: translateY(-50%)

  .navIcon
    margin: 0 emCalc(5px)
    border-radius: 50%
    background: rgba(0, 0, 0, 0.5)
    cursor: pointer
    fill: #fff

  .navIcon:hover
    background: rgba(0, 0, 0, 0.8)

.fullscreenIcon
  position: absolute
  right: 0
  bottom: 0
  z-index: 1
  padding: emCalc(20px)
  cursor: pointer
  fill: #fff

.slider
  display: flex
  height: emCalc(450px)

.transition
  transition: transform ease-out 0.5s

.sliderImage
  height: 100%
  object-fit: cover
