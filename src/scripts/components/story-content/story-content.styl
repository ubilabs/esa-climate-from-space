@require '../../../variables.styl'

.content
  overflow-y: auto
  padding: emCalc(80px) emCalc(28px) 0 emCalc(56px)
  min-width: 50%
  max-width: emCalc(750px)
  height: 100%
  background-color: $black
  color: $textDefault
  line-height: emCalc(22px)

  h1
    margin-top: 0
    color: $textColor
    font-weight: bold
    font-size: emCalc(36px)
    font-family: NotesEsa
    line-height: emCalc(16px)

  img, img + em
    display: block
    margin: 0 auto
    width: 75%
    text-align: center
    font-size: emCalc(11px)
    font-family: NotesEsa

.shortTextContent
  overflow-y: hidden
  padding-top: emCalc(30px)
  font-size: emCalc(24px)

  p
    margin: emCalc(10px) 0
