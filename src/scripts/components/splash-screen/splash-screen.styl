@require '../../../variables.styl'

.splashscreen
  display: flex
  flex-direction: row
  justify-content: flex-start
  align-items: center
  width: 100%
  height: 100%
  font-family: NotesEsa

.content
  padding: emCalc(56px)
  width: 40%
  color: $textWhite
  font-size: 1em

  h1
    margin-top: 0
    color: $textWhite
    text-transform: uppercase
    font-weight: bold
    font-size: emCalc(36px)
    font-family: NotesEsa
    line-height: emCalc(16px)

  p
    line-height: emCalc(22px)
